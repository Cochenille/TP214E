<Page x:Class="TP214E.Pages.PageAliment"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TP214E.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0">
            <TextBlock x:Name="lblId" Text=""></TextBlock>
            <TextBox x:Name="txtNom" Text=""></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0">
            <TextBox x:Name="txtQuatite" Text=""></TextBox>
            <TextBox x:Name="txtUnite" Text=""></TextBox>
        </StackPanel>
        <Button Grid.Column="0" Grid.Row="1" Width="100" Height="30" x:Name="btnFermerPage" Click="FermerPage" Content="Annuler" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Column="1" Grid.Row="1" Width="100" Height="30" x:Name="btnEnvoyerInfo" Click="EnvoyerInformationsAliment" Content="Envoyer" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Page>
