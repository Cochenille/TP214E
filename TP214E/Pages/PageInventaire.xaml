<Page x:Class="TP214E.PageInventaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TP214E"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Inventaire">
    <Page.Resources>
        <DataTemplate x:Key="AlimentMaquette">
            <StackPanel Orientation="Horizontal">
                <Label FontWeight="Bold" Content="{Binding Nom}"/>
                <Label Content="{Binding Quantite}"/>
                <Label Content="{Binding ExpireLe}"/>
                <Label Content="{Binding Unite}"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <Grid ShowGridLines="True" Background="NavajoWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="141*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Content="Inventaire" Foreground="#FF5F8C5A" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Rockwell" FontSize="36" FontWeight="Normal" Height="52" Width="178"/>
        <!--<StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
            <Menu Height="49" />
            <Menu Height="49"/>
        </StackPanel>-->
        <!--<ListBox ItemTemplate="{DynamicResource ListBoxItemTemplate1}" Background="PapayaWhip" Grid.Column="1" Grid.Row="1" x:Name="liste_aliments" HorizontalAlignment="Center" VerticalAlignment="Center" Width="580" Height="262" >
            <ListBoxItem HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Label x:Name="nom_aliment" FontWeight="Bold" Content="Nom aliment"/>
                    <Label x:Name="quantite_aliment" Content="Quantité"/>
                    <Label x:Name="expiration_aliment" Content="Date d'expiration"/>
                    -->
        <!--<Button Content="Modifier" Margin="8 0 0 0" Background="#CC5F8C5A" FontSize="12" Width="67" FontFamily="Rockwell" Click="boutonModifier_Click"/>
                    <Button Content="Supprimer" Margin="8 0 0 0" Background="Coral" FontSize="12" Width="67" FontFamily="Rockwell" Click="boutonSupprimer_Click"/>-->
        <!--
                </StackPanel>
            </ListBoxItem>
        </ListBox>-->
        <ListBox ItemTemplate="{DynamicResource AlimentMaquette}" Background="PapayaWhip" Grid.Column="1" Grid.Row="1" x:Name="liste_aliments" HorizontalAlignment="Center" VerticalAlignment="Center" Width="580" Height="262"/>
        <Button Content="Créer" Grid.Column="1" Grid.Row="3" Margin="10,10,452,28" Background="LightGreen" FontSize="12" FontFamily="Rockwell" Click="boutonCreer_Click"/>
        <Label Margin="4,5,540,5" Grid.Row="2" Grid.Column="1">Nom</Label>
        <TextBox x:Name="txtb_creer_nom_aliment" Text="{Binding ElementName=liste_aliments, Path=SelectedItem.Nom}" TextWrapping="Wrap" Grid.Column="1" Margin="40,8,467,8" Grid.Row="2"/>
        <TextBox x:Name="txtb_creer_quantite_aliment" Text="{Binding ElementName=liste_aliments, Path=SelectedItem.Quantite}" TextWrapping="Wrap" Grid.Column="1" Margin="216,8,346,8" Grid.Row="2"/>
        <TextBox x:Name="txtb_creer_date_expiration_aliment" Text="{Binding ElementName=liste_aliments, Path=SelectedItem.ExpireLe}" TextWrapping="Wrap" Grid.Column="1" Margin="323,8,175,8" Grid.Row="2"/>
        <TextBox x:Name="txtb_creer_unite_aliment" Text="{Binding ElementName=liste_aliments, Path=SelectedItem.Unite}" TextWrapping="Wrap" Grid.Column="1" Margin="495,8,10,8" Grid.Row="2"/>
        <Label Margin="152,5,374,5" Grid.Row="2" Grid.Column="1" Content="Quantité"/>
        <Label Margin="254,5,266,5" Grid.Row="2" Grid.Column="1" Content="Expire le"/>
        <Label Margin="432,5,105,5" Grid.Row="2" Grid.Column="1" Content="Unité"/>
        <Button Content="Supprimer" Grid.Column="1" Grid.Row="3" Margin="452,10,10,28" Background="#ed5f5f" FontSize="12" FontFamily="Rockwell" Click="boutonSupprimer_Click"/>
    </Grid>
</Page>
